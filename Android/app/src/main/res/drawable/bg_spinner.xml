<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/nothing" />
        </shape>
    </item>
    <item
        android:width="12dp"
        android:height="12dp"
        android:gravity="center|right"
        android:left="0dp"
